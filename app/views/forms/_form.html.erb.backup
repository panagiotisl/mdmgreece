  <% end %>
  <div class="form-group">
  <%= f.text_field :title, autofocus: true, :placeholder => "Title", :class => "form-control" %>
  </div>
 
  <div class="actions">
      <div><%= f.submit "Create form", :class => "btn btn-lg btn-primary btn-block" %></div>

  </div>
<% end %>
